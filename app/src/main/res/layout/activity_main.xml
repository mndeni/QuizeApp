<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.admin.quizeapp.MainActivity">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY QIUZE APP QUESTION"
            android:background="#f08080"
            android:padding="20dp"
            android:textSize="40sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MATHS QUESTION"
            android:background="#a3b03d"
            android:textSize="30sp"
            android:padding="30dp"
            android:onClick="openMathsQuestion"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LIFE SCIENCE"
            android:background="#ffa800"
            android:textSize="30sp"
            android:padding="30dp"
            android:onClick="openLifeScince"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="POLITICS QUESTION"
            android:background="#ede0be"
            android:textSize="30sp"
            android:onClick="openPolitics"
            android:padding="30dp"/>

    </LinearLayout>



</RelativeLayout>
